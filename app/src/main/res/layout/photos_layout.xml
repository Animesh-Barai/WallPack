<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/mainPhotoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:transitionName="viewDetail" />

        <com.berhane.biniam.wallpack.wallpack.utils.CircularAuthorImage
            android:id="@+id/author_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/image_preview"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/author_image"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:text="author_name"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</FrameLayout>